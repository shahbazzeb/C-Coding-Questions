#include<bits/stdc++.h>
using namespace std;
int main()
{
//i have taken the static array you can go with dynamic one 
	int a[8]={1,2,0,7,2,0,2,2};
	int m=INT_MIN;
	int ctr=0;
	int i;
	for(i=0;i<7;i++)
	{
		
		if(a[i]>m && a[i]>a[i+1])
		{
			ctr++;	
		}
    //updating the m variable to keep track of the max element.
		m=max(m,a[i]);
	}
	cout<<m<<endl
  //Checking the last element of the array
	if(a[7]>m)
		ctr++;
		
cout<<ctr;
	return 0;
}
